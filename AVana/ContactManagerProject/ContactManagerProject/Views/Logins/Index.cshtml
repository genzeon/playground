@model ContactManagerProject.Models.Login


<style>
    .insertimg{
        display:none;
    }
</style>

<h1 class="header"><i><u>Login Details</u></i></h1>

    <div class="row">
        <div class="col-md-4 LoginStyles">
        @*<form asp-action="Index">*@
            <form method="post">
            <div class="form-group UserName textshadow">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" placeholder="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"> </span>
            </div>
            <div class="form-group Password textshadow">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password"  placeholder="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"> </span>
                <div style="color:red">@ViewBag.Title</div>
            </div>
            
            <div class="form-group Submit">
                <input type="submit" value="Login" class="btn btn-primary Park" />
            </div>
        </form>
        </div>
    </div>

