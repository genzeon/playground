@model ContactManagerProject.Models.Country

<style>
    .insertimg{
        display:none;
    }
</style>

@{
    ViewData["Title"] = "Edit";
}

<h1 class="MyModify"><i><u>Modify Country Details</u></i></h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PkcountryId" />
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCodeStart" class="control-label"></label>
                <input asp-for="ZipCodeStart" class="form-control" />
                <span asp-validation-for="ZipCodeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCodeEnd" class="control-label"></label>
                <input asp-for="ZipCodeEnd" class="form-control" />
                <span asp-validation-for="ZipCodeEnd" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
