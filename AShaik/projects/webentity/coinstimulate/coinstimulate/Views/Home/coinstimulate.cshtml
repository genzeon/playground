@model IEnumerable<coinstimulate.Models.Coindb>



<table class="table">
   
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.FaceUp)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.TossCount)
                </td>
               
            </tr>
        }
    </tbody>
</table>


<div class="text-center">


    <form asp-action="flip">
 <input type = "submit"   value ="Flip a coin"  class="btn btn-success" />
             
 </form>
 </div>

